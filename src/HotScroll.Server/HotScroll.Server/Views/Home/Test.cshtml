@{
    ViewBag.Title = "Chat";
}

<h2>Chat</h2>

<div class="container">
    <input type="button" id="playBtn" value="Play" />
    <input type="text" id="message" />
    <input type="button" id="sendbtn" value="Step" />
    <input type="hidden" id="displayname" />
    <ul id="discussion">
    </ul>
</div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-1.1.0-beta1.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.--> 
    <script>
        var User = null;
        $(function() {
            // Reference the auto-generated proxy for the hub.  
            var chat = $.connection.connectHub;
            // Create a function that the hub can call back to display messages.
            chat.client.userConnected = function(user) {
                addMessage(user, "connected");
            };

            chat.client.play = function(projection) {
                addMessage(User, 'playing now with id =' + projection.Opponent.Id);
            };
            chat.client.receiveStep = function (step) {
                addMessage(User, 'nigga moved ' + step.Points);
            };

            $('#displayname').val(prompt('Enter your name:', ''));

            $.connection.hub.start().done(function() {
                chat.server.connect({ Name: $('#displayname').val() }).done(function (user) {
                    User = user;
                });
            });
            
            $('#playBtn').click(function () {
                addMessage(User, "waiting for partener");
                chat.server.waitPartner(User);
            });
            $('#sendbtn').click(function () {
                var step = { Points: $('#message').val(), UserId : User.Id };
                addMessage(User, "moving for " + step.Points);
                chat.server.recordStep(step);
                $('#message').val('');
                $('#sendbtn').focus();
            });
        });
        // This optional function html-encodes messages for display in the page.

        function addMessage(user, msg) {
            $('#discussion').append('<li><strong>' + htmlEncode(user.Name + ' (' + user.Id + ')')
                + '</strong>: ' + htmlEncode(msg) + '</li>');
        }

        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}
